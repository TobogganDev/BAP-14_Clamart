{% extends 'base.html.twig' %}


{% block body %}
    {% include 'partial/header.html.twig' %}
    <section class="w-full h-[80vh] flex items-center">
        <div class="w-1/2 text-new-red px-48">
            <form method="post" class="flex flex-col gap-6 font-semibold">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}


                <h1 class="text-3xl border-b-2 text-center pb-2">Connexion</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input-login" autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control input-login" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}

                <button class="py-2 px-4 bg-white text-new-red font-semibold rounded-full login-btn" type="submit">
                    Sign in
                </button>
            </form>
            <div class="text-center mt-5">
                Pas encore de compte  ? <a href="{{ path('app_register') }}" class="underline">Inscription</a>
            </div>
        </div>
        <div class="-z-10">
            <img src="{{ asset('img/login-bg.png') }}" alt="login" class="w-full h-full object-cover ">
        </div>
    </section>
{% endblock %}
