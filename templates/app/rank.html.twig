{% extends 'base.html.twig' %}

{% block body %}

    <div class="w-11/12 mx-auto mt-[5rem]">
        <div class="flex items-center w-full">
            <a href="{{ path('app_index') }}">
                <img src="{{ asset('img/arrow.svg') }}" alt="arrow icon" class="w-[65px] h-[65px]">
            </a>

            <h1 class="text-center font-semibold text-[40px] w-full">Classement du quizz</h1>
        </div>


        <div class="flex justify-between mt-[5rem] w-full ">
            <div class="w-5/12 flex">
                <div class="relative ranking bg-[#CCE5D0] flex items-center justify-center">
                    <img src="{{ asset('img/first.png') }}" alt="first" class="absolute top-0 left-0">
                    <div class="text-center">
                        <p>20/20</p>
                        <p>1m 13s</p>
                        <p>Admin</p>
                    </div>
                </div>

                <div class="relative ranking bg-[#4D8E8E] flex items-center justify-center">
                    <img src="{{ asset('img/second.png') }}" alt="first" class="absolute top-0 left-0">
                    <div class="text-center text-white">
                        <p>20/20</p>
                        <p>1m 13s</p>
                        <p>Admin</p>
                    </div>
                </div>

                <div class="relative ranking bg-[#E42353] flex items-center justify-center">
                    <img src="{{ asset('img/third.png') }}" alt="first" class="absolute top-0 left-0">
                    <div class="text-center text-white">
                        <p>20/20</p>
                        <p>1m 13s</p>
                        <p>Admin</p>
                    </div>
                </div>
            </div>
            <div class="w-6/12 bg-[#21A59F] py-4 px-8 rounded-[15px] h-[60vh] rank-wrapper">
                <table class="w-full text-white">
                    <thead class="">
                        <tr>
                            <th>Place</th>
                            <th>Nom</th>
                            <th>Score</th>
                            <th>Temps</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

{% endblock %}



