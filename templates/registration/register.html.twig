{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% include 'partial/header.html.twig' %}
    <section class="w-full h-[80vh] flex items-center">
        <div class="w-1/2 text-new-red px-48">
            {{ form_start(registrationForm, { 'attr': {'class': 'flex flex-col gap-6 font-semibold w-full'} }) }}
                <h1 class="text-3xl border-b-2 text-center pb-2">Inscription</h1>
                {{ form_row(registrationForm.email, { 'attr': {'class': 'input-login flex'} }) }}
                {{ form_row(registrationForm.plainPassword, { label: 'Password' , 'attr': {'class': 'input-login flex'} }) }}
                {{ form_row(registrationForm.agreeTerms, { 'attr': {'class': 'flex gap-4'} }) }}

                <button type="submit" class="py-2 px-4 bg-white text-new-red font-semibold rounded-full login-btn">Register</button>
            {{ form_end(registrationForm) }}
        </div>
        <div class="-z-10">
            <img src="{{ asset('img/login-bg.png') }}" alt="login" class="w-full h-full object-cover ">
        </div>
    </section>


{% endblock %}
